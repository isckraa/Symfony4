{% extends 'base.html.twig' %}

{% block title %}Ordonnance{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="font-weight-light">Ordonnance</h1>

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">NumeroOrdre</th>
                        <th scope="col">DateHeure</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ordonnance in ordonnances %}
                    <tr>
                        <td>{{ ordonnance.id }}</td>
                        <td>{{ ordonnance.numeroOrdre }}</td>
                        <td>{{ ordonnance.dateHeure ? ordonnance.dateHeure|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="btn btn-primary ml-2" href="{{ path('ordonnance_show', {'id': ordonnance.id}) }}">show</a>
                            <a class="btn btn-primary ml-2" href="{{ path('ordonnance_edit', {'id': ordonnance.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-warning" href="{{ path('ordonnance_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
