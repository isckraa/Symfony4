{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="font-weight-light mb-4">Patient</h1>
        
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ patient.id }}</td>
                    </tr>
                    <tr>
                        <th>NumSS</th>
                        <td>{{ patient.numSS }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ patient.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ patient.prenom }}</td>
                    </tr>
                    <tr>
                        <th>DateNaissance</th>
                        <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Sexe</th>
                        <td>{{ patient.sexe }}</td>
                    </tr>    
                </tbody>
            </table>
            
            <a class="btn btn-primary" href="{{ path('patient_index') }}">Back to list</a>
            <a class="btn btn-primary" href="{{ path('patient_edit', {'id': patient.id}) }}">Edit</a>
        
            {{ include('patient/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
