        <div class="container">
            <h1 class="font-weight-light mb-4">Medecin</h1>
    
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ medecin.id }}</td>
                    </tr>
                    <tr>
                        <th>Matricule</th>
                        <td>{{ medecin.matricule }}</td>
                    </tr>
